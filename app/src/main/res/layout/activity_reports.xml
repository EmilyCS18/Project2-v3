<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/blue_gradient"
    tools:context=".ReportsActivity">

    <Button
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/bright_blue"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:hint="l"
        app:cornerRadius="100dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/overview_Reports_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YTD Summary"
                android:textAlignment="center"
                android:textColor="@color/bright_blue"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textAlignment="center"
                android:textColor="@color/bright_blue"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="_______________________"
                android:textAlignment="center"
                android:textColor="@color/bright_blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_trips_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Trips: 0"
                android:textAlignment="textStart"
                android:textColor="@color/bright_blue"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_miles_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Miles: 0"
                android:textAlignment="textStart"
                android:textColor="@color/bright_blue"
                android:layout_marginTop="16dp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_expenses_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Expenses: $0.00"
                android:textAlignment="textStart"
                android:textColor="@color/bright_blue"
                android:layout_marginTop="16dp"
                android:textSize="25sp"
                android:textStyle="bold"
                 />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
